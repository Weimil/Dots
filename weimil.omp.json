{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "background": "#d3d7cf",
          "foreground": "#000000",
          "leading_diamond": "\u256D\u2500\uE0B6",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}  "
        },
        {
          "type": "session",
          "style": "powerline",
          "background": "#420052",
          "foreground": "#ffffff",
          "powerline_symbol": "\uE0B4",
          "template": " {{ if .SSHSession }}\uF817 {{ end }}{{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "#6C0485",
          "foreground": "#e4e4e4",
          "powerline_symbol": "\uE0B4",
          "template": " \uf07c  {{ .Path }}",
          "properties": {
            "home_icon": "~",
            "style": "full"
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#8F18AC",
          "powerline_symbol": "\uE0B4",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "template": " {{ .FormattedMs }}s"
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "#83CE3C",
          "foreground": "#000000",
          "powerline_symbol": "\uE0B4",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFDC43{{ end }}", 
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#E54949{{ end }}",
            "{{ if gt .Ahead 0 }}#89BCDC{{ end }}",
            "{{ if gt .Behind 0 }}#83CE3C{{ end }}"
          ],
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,

            "branch_icon": "\uE0A0 ",
            "commit_icon": " \uF417 "
          },
          "template": "{{ .UpstreamIcon }} {{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "battery",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "\uE0B6",
          "foreground": "#000000",
          "background": "#3cc424",
          "background_templates": [
            "{{ if eq \"Charging\" .State.String } } #00FF00 {{ end }}",
            "{{ if eq \"Discharging\" .State.String }} #FF0000 {{ end }}",
            "{{ if eq \"Full\" .State.String }} #00FF00 {{ end }}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }} ï•½ ",
          "properties": {
            "discharging_icon": "\uE231 ",
            "charging_icon": "\uE234 ",
            "charged_icon": "\uE22F "
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "background": "#6CA35E",
          "foreground": "#FFFFFF",
          "invert_powerline": true,
          "powerline_symbol": "\uE0B6",
          "properties": {
            "always_enabled": true
          },
          "template": " \uE718 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "npm",
          "style": "powerline",
          "background": "#FC3232",
          "foreground": "#000000",
          "invert_powerline": true,
          "powerline_symbol": "\uE0B6",
          "properties": {
            "always_enabled": true
          },
          "template": " \uE71E {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "time",
          "style": "diamond",
          "background": "#FFFFFF",
          "foreground": "#000000",
          "invert_powerline": true,
          "trailing_diamond": "\ue0b4",
          "template": " {{ .CurrentDate | date .Format }}"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#d3d7cf",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{.UserName}}@{{.HostName}} in {{ .Folder }}",
  "final_space": true,
  "version": 2
}